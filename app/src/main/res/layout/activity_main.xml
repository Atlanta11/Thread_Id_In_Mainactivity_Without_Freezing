<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="enterprise.sample.com.thread_id.MainActivity">

    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonThreadStarter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:text="Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStopthread"
        android:layout_marginTop="129dp"
        android:id="@+id/buttonThreadStarter1"
        android:layout_alignParentEnd="true"
        android:onClick="onClick1" />

    <Button
        android:text="Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonThreadStarter1"
        android:layout_alignStart="@+id/buttonThreadStarter1"
        android:layout_marginTop="39dp"
        android:id="@+id/buttonStopthread1"
        android:onClick="onClick1" />

    <Button
        android:text="Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonStopthread"
        android:onClick="onClick"
        android:layout_below="@+id/buttonThreadStarter"
        android:layout_alignParentStart="true" />
</RelativeLayout>
